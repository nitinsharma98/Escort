<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
<div class="col-8 offset-2" >
    <h3>Create a new Listing</h3><br>
    <form method="POST" action="/listings"  novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-label">Enter Title</label>
            <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required> 
            <div class="valid-feedback">
                Title looks good!
              </div>
            <div class="invalid-feedback">
                Title should be valid!
            </div>  
        </div>
             
        <div class="mb-3">
            <label for="description" class="form-label">Enter description</label>
             <textarea name="listing[description]" class="form-control" required> </textarea><br>       <!--  this req not wrk -->
        </div>

        
        <div class="mb-3">
            <label for="image" class="form-label">Upload image</label>
            <input name="listing[image]" class="form-control"  type="file" required> <br>
        </div>


        <div class="mb-3">
            <label for="location" class="form-label">Enter location</label>
            <input name="listing[location]" class="form-control" type="text" placeholder="Jaipur,India" required>
            <div class="valid-feedback">
                Location is good!
              </div>
            <div class="invalid-feedback">
                Location should be valid!
            </div>  
            <br>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4" >
                <label for="price" class="form-label">Enter price</label>
                <input name="listing[price]" class="form-control" type="number" placeholder="4000" required>
                <div class="invalid-feedback">
                    Price should be valid!
                </div>  
        
            </div>
            <div class="mb-3 col-md-8" >
                <label for="country" class="form-label">Enter country</label>
                <input name="listing[country]" class="form-control" type="text" placeholder="India" required> 
                <div class="valid-feedback">
                    You filled this column!
                  </div>
                <div class="invalid-feedback">
                    Country should be valid!
                </div>  

            </div>
        </div>

        <button class="btn btn-dark add-btn">Add</button><br><br>
    </form>
</div>
</div>
